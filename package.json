{
	"name": "mock-debug",
	"displayName": "Mock Debug",
	"version": "0.10.18",
	"publisher": "andreweinand",
	"description": "Starter extension for developing debug adapters for VS Code.",
	"author": {
		"name": "Microsoft Corporation"
	},
	"engines": {
		"vscode": "^0.10.1"
	},
	"icon": "images/mock-debug-icon.svg",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-mock-debug.git"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-mock-debug/issues"
	},
	"dependencies": {
		"vscode-debugprotocol": "~1.6.0-pre4",
		"vscode-debugadapter": "~1.6.0-pre8",
		"vscode-nls": "^1.0.2"
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"mocha": "^2.3.4"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"watch": "tsc -w -p ./src",
		"test": "node ./node_modules/mocha/bin/mocha -u tdd ./out/tests/"
	},
	"contributes": {
		"debuggers": [
			{
				"type": "cocos",
				"label": "Cocos Debug",

				"enableBreakpointsFor": { "languageIds": [ "javascript" ] },

				"program": "./out/mockDebug.js",
				"runtime": "node",

				"configurationAttributes": {
					"attach": {
						"required": [ "port" ],
						"properties": {
							"port": {
								"type": "number",
								"description": "The debug port to attach to.",
								"default": 5086
							},
							"address": {
								"type": "string",
								"description": "The TCP/IP address of the port (remote addresses only supported for node >= 5.0).",
								"default": "localhost"
							}
						}
					}
				},

				"initialConfigurations": [
					{
						"name": "Cocos-Debug",
						"type": "cocos",
						"request": "attach",
						"port": 5086,
						"address": "localhost"
					}
				]
			}
		]
	}
}